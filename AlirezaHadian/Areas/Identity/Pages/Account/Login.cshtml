@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
    <section>
        <form id="account" method="post" class="login-form">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Input.UserName" class="form-control rounded-left" placeholder="Username" required />
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>
            <div class="form-group d-flex">
                <input asp-for="Input.Password" class="form-control rounded-left" placeholder="Password" required />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="form-control btn btn-primary rounded submit px-3">Login</button>
            </div>

            <div class="form-group d-md-flex">
                <div class="w-50">
                    <label class="checkbox-wrap checkbox-primary">
                        Remember Me
                        <input asp-for="Input.RememberMe" />
                        <span class="checkmark"></span>
                    </label>
                </div>
                <div class="w-50 text-md-right">
                    <a asp-page="./ForgotPassword">Forgot Password</a>
                </div>
            </div>
        </form>
    </section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
