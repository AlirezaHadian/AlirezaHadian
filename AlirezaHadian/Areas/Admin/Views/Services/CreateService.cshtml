@model AlirezaHadian.Models.Service

@{
    ViewData["Title"] = "افزودن خدمات جدید";
}

<form asp-action="CreateService" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Text" class="control-label"></label>
        <input asp-for="Text" class="form-control" />
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ServicesCategoryID" class="control-label"></label>
        <select asp-for="ServicesCategoryID" class="form-control" asp-items="ViewBag.ServicesCategoryID"></select>
        <span asp-validation-for="ServicesCategoryID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="افزودن" class="btn btn-primary" />
    </div>
</form>
