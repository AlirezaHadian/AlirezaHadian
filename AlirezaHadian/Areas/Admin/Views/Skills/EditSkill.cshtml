@model AlirezaHadian.Models.Skill

@{
    ViewData["Title"] = "ویرایش مهارت";
}

<form asp-action="EditSkill" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="SkillID" />
    <div class="form-group">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Percentage" class="control-label"></label>
        <input asp-for="Percentage" class="form-control" />
        <span asp-validation-for="Percentage" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SkillCategoryID" class="control-label"></label>
        <select asp-for="SkillCategoryID" class="form-control" asp-items="ViewBag.SkillsCategoryID"></select>
        <span asp-validation-for="SkillCategoryID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="ویرایش" class="btn btn-primary" />
    </div>
</form>
